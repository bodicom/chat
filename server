import socket
import sys

host = '0.0.0.0'
port = 1234
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
s.bind((host, port))
s.listen(999)
sock, addr = s.accept()
while True:
    msg = sock.recv(1024)
    if msg == "exit":
        sock.sendall("bye")
        break
    elif msg:
        sock.sendall(msg)
sock.close()
